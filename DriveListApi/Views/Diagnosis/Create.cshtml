@{
    ViewData["Title"] = "Arıza Teşhisi";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Başlık -->
            <div class="text-center mb-4">
                <h2 class="fw-bold text-primary">
                    <i class="bi bi-tools"></i> Arıza Teşhisi
                </h2>
                <p class="text-muted">Aracınızdaki sorunu metin, ses veya resim ile bize iletin</p>
            </div>

            <!-- Form Kartı -->
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <form asp-action="Create" asp-controller="Diagnosis" method="post" enctype="multipart/form-data">
                        <!-- Metin Alanı -->
                        <div class="mb-3">
                            <label for="description" class="form-label fw-semibold">
                                <i class="bi bi-pencil-square"></i> Arızayı Açıklayın
                            </label>
                            <textarea name="description" class="form-control" rows="3" placeholder="Örn: Motor çalışırken garip ses geliyor..."></textarea>
                        </div>

                        <!-- Ses Dosyası -->
                        <div class="mb-3">
                            <label for="audio" class="form-label fw-semibold">
                                <i class="bi bi-mic-fill text-danger"></i> Ses Dosyası (opsiyonel)
                            </label>
                            <input type="file" name="audio" class="form-control" accept="audio/*" />
                        </div>

                        <!-- Resim Dosyası -->
                        <div class="mb-3">
                            <label for="image" class="form-label fw-semibold">
                                <i class="bi bi-image-fill text-success"></i> Resim (opsiyonel)
                            </label>
                            <input type="file" name="image" class="form-control" accept="image/*" />
                        </div>

                        <!-- Buton -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                                <i class="bi bi-send-fill"></i> Gönder
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Sonuç Gösterimi -->
            @if (ViewBag.Result != null)
            {
                <div class="card border-0 shadow-lg mt-4 animate__animated animate__fadeIn">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-clipboard-check-fill text-success fs-3 me-2"></i>
                            <h5 class="fw-bold mb-0">Teşhis Sonucu</h5>
                        </div>
                        <hr />
                        <p class="mb-0 fs-5 text-secondary">
                            @ViewBag.Result
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>