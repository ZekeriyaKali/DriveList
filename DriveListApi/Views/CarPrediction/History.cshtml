@model IEnumerable<PredictionHistory>

@{
    ViewData["Title"] = "Tahmin Geçmişim";
}

<div class="container my-5">
    <h2 class="text-center mb-4">📜 Tahmin Geçmişiniz</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">Henüz bir tahmin yapmadınız.</div>
    }
    else
    {
        <div class="table-responsive shadow rounded-3">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Tarih</th>
                        <th>Marka</th>
                        <th>Model</th>
                        <th>Yıl</th>
                        <th>Km</th>
                        <th>Vites</th>
                        <th>Yakıt</th>
                        <th>Şehir</th>
                        <th>Tahmini Fiyat</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@item.Brand</td>
                            <td>@item.Model</td>
                            <td>@item.Year</td>
                            <td>@String.Format("{0:N0}", item.Km)</td>
                            <td>@item.GearType</td>
                            <td>@item.FuelType</td>
                            <td>@item.City</td>
                            <td><strong>@String.Format("{0:N0}", item.PredictedPrice) ₺</strong></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
