@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Araç Fiyat Tahmini</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom site CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header class="bg-dark text-white p-3 shadow-sm">
        <div class="container">
            <h1 class="h3">🚗 Araç Tahmini Uygulaması</h1>
        </div>
    </header>

    <main role="main" class="pb-3">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-light text-center text-muted py-3 mt-5 border-top">
        <div class="container">
            <small>&copy; @DateTime.Now.Year - Araç Tahmin Sistemi</small>
        </div>
    </footer>

    <!-- Bootstrap JS (Popper dahil) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Sayfaya özel scriptler buraya gelir -->
    @RenderSection("Scripts", required: false)
</body>
</html>