@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Araç Fiyat Tahmini</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom site CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">Drive AI</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="CarPrediction" asp-action="Create">Fiyat Tahmini</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Arıza Teşhisi (Yakında)</a>
                    </li>
                </ul>

                <!-- Sağ menü (Oturum Aç / Kaydol) -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="btn btn-outline-light me-2" asp-controller="Auth" asp-action="Login">Oturum Aç</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-primary" asp-controller="Auth" asp-action="Register">Kaydol</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main role="main" class="pb-3">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-light text-center text-muted py-3 mt-5 border-top">
        <div class="container">
            <small>&copy; @DateTime.Now.Year - Araç Tahmin Sistemi</small>
        </div>
    </footer>

    <!-- Bootstrap JS (Popper dahil) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Sayfaya özel scriptler buraya gelir -->
    @RenderSection("Scripts", required: false)
</body>
</html>