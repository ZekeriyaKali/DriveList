@{
    Layout = null;
}

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Araç Fiyat Tahmini</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom site CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        ...
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <!-- sol menü -->
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="CarPrediction" asp-action="Create">Fiyat Tahmini</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Arıza Teşhisi (Yakında)</a></li>
            </ul>

            <ul class="navbar-nav">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Merhaba, @User.Identity?.Name
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Manage">Profil</a></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="px-3 py-1">
                                    <button type="submit" class="btn btn-link p-0">Çıkış Yap</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="btn btn-outline-light me-2" asp-controller="Account" asp-action="Login">Oturum Aç</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Kaydol</a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <main role="main" class="pb-3">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-light text-center text-muted py-3 mt-5 border-top">
        <div class="container">
            <small>&copy; @DateTime.Now.Year - Araç Tahmin Sistemi</small>
        </div>
    </footer>

    <!-- Bootstrap JS (Popper dahil) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Sayfaya özel scriptler buraya gelir -->
    @RenderSection("Scripts", required: false)
</body>
</html>