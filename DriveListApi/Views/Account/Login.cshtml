@model LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 400px;">
        <h3 class="text-center mb-4">🔑 Giriş Yap</h3>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger mb-2"></div>
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                <input asp-for="Username" class="form-control" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for="Password" type="password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Beni hatırla</label>
            </div>
            <button type="submit" class="btn btn-success w-100">Giriş Yap</button>
        </form>

        <div class="text-center mt-3">
            <form asp-action="ExternalLogin" asp-route-provider="Google" method="post">
                <button type="submit" class="btn btn-outline-danger w-100">
                    <i class="bi bi-google"></i> Google ile Giriş Yap
                </button>
            </form>
        </div>

        <p class="text-center mt-3">
            Hesabın yok mu? <a asp-controller="Account" asp-action="Register">Kayıt Ol</a>
        </p>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}