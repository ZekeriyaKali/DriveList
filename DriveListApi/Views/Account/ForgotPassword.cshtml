@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 400px;">
        <h3 class="text-center mb-4">🔑 Şifremi Unuttum</h3>
        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="All" class="text-danger mb-2"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email Adresi</label>
                <input asp-for="Email" type="email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-warning w-100">Şifre Sıfırlama Linki Gönder</button>
        </form>

        <p class="text-center mt-3">
            Hatırladın mı? <a asp-controller="Account" asp-action="Login">Giriş Yap</a>
        </p>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}