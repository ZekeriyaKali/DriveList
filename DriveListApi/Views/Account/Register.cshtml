@model DriveListApi.Models.RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 450px;">
        <h3 class="text-center mb-4">📝 Kayıt Ol</h3>
        <form asp-action="Register" method="post">
             <!-- Validation Summary -->
            @if (!ViewData.ModelState.IsValid && ViewContext.HttpContext.Request.Method == "POST")
            {
                <div asp-validation-summary="All" class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> Lütfen formu kontrol edin.
                </div>
            }
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                <input asp-for="Username" class="form-control" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type="email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for="Password" type="password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Şifre Onayla</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="g-recaptcha mb-3" data-sitekey="YOUR_SITE_KEY"></div>
            <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
        </form>

        <p class="text-center mt-3">
            Zaten hesabın var mı? <a asp-controller="Account" asp-action="Login">Giriş Yap</a>
        </p>
    </div>
</div>

@section Styles {
    <style>
        .field-validation-error {
            color: #dc3545;
            font-size: 0.85rem;
            margin-top: 4px;
            display: block;
        }
    </style>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
}